@model IEnumerable<CarWorkshop.Aplication.CarWorkshop.CarWorkshopDto>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-secondary">Create New</a>
</p>
<div class="row">
    @foreach(var item in Model)
    {
        <div class="card m-3" style="width: 18rem;">
            <div class="card-body">
                <h5 class="card-title">@item.Name</h5>
                <h6 class="card-subtitle mb-2 text-muted">@item.PhoneNumber</h6>
                <p class="card-text">@item.Description</p>
                <a herf="#"class="btn btn-primary">Details</a>
                <a herf="#" class="btn btn-secondary">Edit</a>

            </div> 

        </div>
    }

</div>
